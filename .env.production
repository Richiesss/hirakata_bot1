# LINE Bot設定
LINE_CHANNEL_SECRET=your_channel_secret_here
LINE_CHANNEL_ACCESS_TOKEN=your_channel_access_token_here

# Ollama設定
OLLAMA_MODEL=llama3.2
OLLAMA_URL=http://host.docker.internal:11434
OLLAMA_NUM_PARALLEL=4
OLLAMA_TIMEOUT=30

# データベース設定
# Docker内ではSQLiteを使用する場合
DATABASE_URL=sqlite:////app/instance/hirakata_bot.sqlite
# PostgreSQLを使用する場合
# DATABASE_URL=postgresql://hirakata:hirakata@db:5432/hirakata_bot

# Flask設定
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=False

# セキュリティ設定
LINE_ID_SALT=change_this_to_random_string
SECRET_KEY=change_this_to_random_secret_key

# ポイント設定
POINT_CHAT_OPINION=10
POINT_FREE_FORM=5
POINT_POLL_RESPONSE=3

# チャット対話設定
MAX_CHAT_TURNS=5
CHAT_SESSION_TIMEOUT=600
